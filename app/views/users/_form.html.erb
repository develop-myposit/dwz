<%= javascript_include_tag "userfocus" %>
<%= form_for(@user) do |f| %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>
 
  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>
 
  <% if action_name == "new" %>
  <p><%= f.label :password, "New password" %><br />
  <%= f.password_field :password %></p>
 
  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>
  <% end %>
 
 <div class="actions">
    <%= f.submit %>
  </div>
<% end %>