<section>
<h1>New User Sign up</h1>

<%= form_for(resource, :as => resource_name, :html => {:class => 'form'},:url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<p class = "name">
  <%= f.text_field :name, :autofocus => true %>
  <%= f.label :name %>

</p>
<p class="email">
  <%= f.email_field :email %>
  <%= f.label :email %>

</p>
<p class="password">
  <%= f.password_field :password %>
  <%= f.label :password %>

</p>
<p class="password_confirmation">
  <%= f.password_field :password_confirmation %>
  <%= f.label :password_confirmation %>
</p>
<p>
<%= f.submit "Sign me up", :class => "sbmt orange"  %>
</p>
<% end %>

<br />

<%= render :partial => "devise/shared/links" %>
</section>
