<p class = "name">
    <%= f.text_field :name, :autofocus => true %>
    <%= f.label :name, "Page Record Name" %>
</p>
<p class = "title">
    <%= f.text_field :title %>
    <%= f.label :title, "Page Display Title" %>
</p>
<p class="admin">
    <%=f.label :admin, "Admin Page?" %>
    <%= f.check_box :admin %>
</p>
<p class = "parent_id">
    <%= f.collection_select :parent_id, Page.all, :id, :title, :include_blank => true %>
    <%= f.label :parent_id, "Parent Page? (leave blank if this is a parent page)" %>
</p>
<p class= "position">
    <%= f.text_field :position, :size => 2 %>
    <%= f.label :position, 'Left(1) to Right(1+n) Position?' %>
</p>
<p class="navlabel">
    <%= f.text_field :navlabel %>
    <%= f.label :navlabel, "Navigation Label" %>
</p>
<p class="redirect">
   <%= f.label :redirect, "Redirect?" %>
   <%= f.check_box :redirect %>
</p>
<p class="action">
   <%= f.text_field :action_name %>
   <%= f.label :action_name, "Action" %>
</p>
<p class="controller_name">
   <%= f.text_field :controller_name %>
   <%= f.label :controller_name, "Controller" %>
</p>   
<p class="body">
    <%= f.label :body, 'Page Body (use Markdown)' %><br />
    <%= f.text_area :body %>
</p>

